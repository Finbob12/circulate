<%= index_header "Categories" do %>
  <%= link_to 'New Category', new_category_path, class: "btn" %>
<% end %>

<div class="responsive-table five-columns">
  <%= tag.div "Name", class: "responsive-table-header" %>
  <%= tag.div "Parent", class: "responsive-table-header" %>
  <%= tag.div "Items", class: "responsive-table-header" %>
  <%= tag.div "Slug", class: "responsive-table-header" %>
  <%= tag.div "", class: "responsive-table-header" %>

  <% @categories.each do |category| %>
    <%= tag.div category.name, class: "responsive-table-cell" %>
    <%= tag.div full_category_parent_name(category), class: "responsive-table-cell" %>
    <%= tag.div category.categorizations_count, class: "responsive-table-cell" %>
    <%= tag.div category.slug, class: "responsive-table-cell" %>

    <%= tag.div class: "responsive-table-cell" do %>
      <div class="btn-group btn-group-block">
        <%= link_to 'Show', category, class: "btn btn-link" %>
        <%= link_to 'Edit', edit_category_path(category), class: "btn btn-link" %>
        <%= dropdown_menu do |menu| %>
          <%= menu.link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
        <% end %>
      </div> 
    <% end %>
  <% end %>
</div>